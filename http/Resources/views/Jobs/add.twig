<div id="mdl-add" class="modal" tabindex="-1" role="dialog">
  <form method="put" action="{{ path_for('jobsAdd') }}" data-callback="responseAdd">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">{{ trans('nerd.new') }} {{ trans('nerd.job') }}</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <div class="form-group">
            <label for="title">{{ trans('nerd.add') }} {{ trans('nerd.new') }} {{ trans('nerd.job') }}</label>
            <input type="text" class="form-control" id="title" name="title" placeholder="{{ trans('nerd.new') }} {{ trans('nerd.job') }}">
          </div>
          <div class="form-group">
            <label for="desc">{{ trans('nerd.desc') }}</label>
            <input type="text" class="form-control" id="desc" name="description" placeholder="{{ trans('nerd.desc') }}">
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">
            <span aria-hidden="true">&times;</span>
            {{ trans('nerd.cancel') }}
          </button>
          <button type="submit" class="btn btn-primary">
            <span class="fa fa-save"></span>
            {{ trans('nerd.add') }}
          </button>
        </div>
      </div>
    </div>
  </form>
</div>
