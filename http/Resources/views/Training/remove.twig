<div id="mdl-remove" class="modal" role="dialog">
  <form method="delete" action="/jobs/{{job_id}}/training/" data-callback="responseRemove">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">{{ trans('nerd.remove') }} {{ trans('nerd.training') }}</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <div class="form-group">
            <label>{{ trans('nerd.remove') }} {{ trans('nerd.file') }}</label>
            <input type="text" id="txt-training-remove" class="form-control">
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">
            <span aria-hidden="true">&times;</span>
            {{ trans('nerd.close') }}
          </button>
          <button type="submit" class="btn btn-primary">
            <span class="fa fa-trash"></span>
            {{ trans('nerd.remove') }}
          </button>
        </div>
      </div>
    </div>
  </form>
</div>
