<div id="mdl-user-new" class="modal" role="dialog">
  <form method="put" action="/users/invite/">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">{{ trans('nerd.invite') }}</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text" id="lbl-user-new">
                <i class="fa fa-envelope-open"></i>
              </span>
            </div>
            <input name="email" type="text" class="form-control" placeholder="{{ trans('nerd.email') }}" aria-label="Email" aria-describedby="lbl-user-new">
          </div>
          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text" id="lbl-user-new">
