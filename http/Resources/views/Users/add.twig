        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">
            <span aria-hidden="true">&times;</span>
            {{ trans('nerd.close') }}
          </button>
          <button type="submit" class="btn btn-primary">
            <span class="fa fa-user-plus"></span>
            {{ trans('nerd.send') }}
          </button>
        </div>
      </div>
    </div>
  </form>
</div>
