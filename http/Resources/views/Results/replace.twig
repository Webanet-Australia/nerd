<div id="mdl-replace" class="modal" role="dialog">
  <form id="frm-search" name="search" method="post" action="results/replace" data-callback="responseRefresh">
    <input id="txt-column" name="node" type="hidden"/>
    <div class="modal-dialog" role="document">
     <div class="modal-content">
       <div class="modal-header">
         <h5 class="modal-title">{{ trans('nerd.result_replace') }}</h5>
         <button type="button" class="close" data-dismiss="modal" aria-label="Close">
           <span aria-hidden="true">&times;</span>
         </button>
       </div>
       <div class="modal-body">
         <label>{{ trans('nerd.select_column') }}</label>
         <div class="form-group">
           <select id="sel-fields" name="fields" class="selectpicker form-control">
             {% for value in results %}
               {% if loop.first %}
                 {% for key in value | keys %}
                   {% if not loop.first %}
                     <option value="{{loop.index0}}">{{key}}</option>
                   {% endif %}
                 {% endfor %}
               {% endif %}
             {% endfor %}
           </select>
         </div>
          <div class="form-group">
            <label for="name">{{ trans('nerd.find') }}</label>
            <input type="text" class="form-control" id="txt-find" name="find" placeholder="{{ trans('nerd.find') }}" autocomplete="on">
          </div>
          <div class="form-group">
            <label for="name"> {{ trans('nerd.replace') }}</label>
            <input type="text" class="form-control" id="txt-replace" name="replace" placeholder=" {{ trans('nerd.replace') }}">
          </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal"> {{ trans('nerd.close') }}</button>
        <button type="submit" class="btn btn-primary"> {{ trans('nerd.replace') }}</button>
      </div>
    </div>
  </div>
 </form>
</div>
